{
  "env": {
    "browser": true,
    "node": true,
    "es2020": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "eslint-config-ndla-h5p",
    "plugin:jsdoc/recommended"
  ],
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2020
  },
  "settings": {
    "react": {
      "version": "detect"
    },
    "jsdoc": {
      "preferredTypes": {
        "Function": "function"
      }
    }
  },
  "plugins": [
    "react",
    "jsdoc"
  ],
  "rules": {
    "valid-jsdoc": "off",
    "react/prop-types": 0
  }
}
