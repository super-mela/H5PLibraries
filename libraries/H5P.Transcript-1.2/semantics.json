[
  {
    "name": "mediumGroup",
    "label": "Medium",
    "type": "group",
    "importance": "high",
    "expanded": true,
    "fields": [
      {
        "name": "medium",
        "type": "library",
        "label": "Medium",
        "options": [
          "H5P.Audio 1.5",
          "H5P.InteractiveVideo 1.26",
          "H5P.Video 1.6"
        ]
      },
      {
        "name": "dummy",
        "type": "boolean",
        "widget": "none",
        "label": "Dummy"
      }
    ]
  },
  {
    "name": "transcriptFiles",
    "type": "list",
    "label": "Transcript files",
    "entity": "transcript file",
    "widgets": [
      {
        "name": "VerticalTabs",
        "label": "Default"
      }
    ],
    "min": 1,
    "field": {
      "name": "transcriptFileData",
      "type": "group",
      "label": "Transcript file data",
      "importance": "high",
      "fields": [
        {
          "name": "transcriptFile",
          "type": "file",
          "label": "Transcript (WebVTT file)"
        },
        {
          "name": "label",
          "type": "text",
          "label": "Label",
          "description": "Label to identify the transcript with. Not relevant if you only have one transcript file."
        },
        {
          "name": "languageCode",
          "type": "text",
          "label": "Language code",
          "description": "The transcript library will try to automatically determine the language of the transcription text as information for screen readers. If that fails, you can manually set the \"BCP 47 language tag\" - e.g. \"en\" for English, \"nb\" for Norwegian bokm√•l, etc.",
          "maxLength": 2,
          "optional": true
        }
      ]
    }
  },
  {
    "name": "behaviour",
    "type": "group",
    "label": "Behavioural settings",
    "importance": "low",
    "fields": [
      {
        "name": "maxLines",
        "type": "number",
        "label": "Maximum number of lines",
        "description": "Maximum number of transcript lines that should be displayed at once. If left out or 0, will display complete transcript.",
        "min": 0,
        "default": 10,
        "optional": true
      },
      {
        "name": "showOnLoad",
        "type": "boolean",
        "label": "Show transcript on load",
        "description": "You can select whether the transcript should be shown when the content is loaded or not.",
        "default": true,
        "optional": true
      }
    ]
  },
  {
    "name": "chapters",
    "type": "group",
    "label": "Chapters",
    "importance": "low",
    "fields": [
      {
        "name": "useIVBookmarks",
        "type": "boolean",
        "label": "Use bookmarks of Interactive Video",
        "default": false,
        "optional": true,
        "widget": "showWhen",
        "showWhen": {
          "rules": [
            {
              "field": "../mediumGroup/medium",
              "equals": [
                "H5P.InteractiveVideo"
              ]
            }
          ]
        }
      },
      {
        "name": "chapterMarks",
        "type": "text",
        "label": "Chapter marks",
        "description": "You can optionally add chapter marks in common mp4chaps format. The syntax is \"hh:mm:ss Chapter title\" or \"hh:mm:ss.MMM Chapter title\"",
        "widget": "textarea",
        "optional": true
      }
    ]
  },
